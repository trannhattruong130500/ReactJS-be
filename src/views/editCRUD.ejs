<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Info</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3">EDIT USER INFO</div>
                    <div class="form-group col-6">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" name="firstName" placeholder="First Name"
                            value="<%= user.firstName %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name"
                            value="<%= user.firstName %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" name="address" placeholder="1234 Main St"
                        value="<%= user.address %>">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="phoneNumber">Number Phone</label>
                        <input type="text" class="form-control" name="phoneNumber" value="<%= user.phoneNumber %>">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="gender">Sex</label>
                        <select name="gender" class="form-control" value="<%= user.gender %>" >
                            <option value="1">Male</option>
                            <option value="0">Female</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="role">Role</label>
                        <select name="roleId" class="form-control" value="<%= user.roleId %>">
                            <option value="1">Doctor</option>
                            <option value="2">Admin</option>
                            <option value="3">Patient</option>
                        </select>
                    </div>
                </div>
                <input type="text" name="id" value="<%= user.id %>" hidden>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>